generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


// TABEL USER
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  profile   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}


// TABEL BIDANG
model Bidang {
  id            Int       @id @default(autoincrement())
  kode          String    @unique
  name          String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())
}


// TABEL PEKERJAAN
model Pekerjaan {
  id            Int       @id @default(autoincrement())
  kode          String    @unique
  name          String
  description   String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())
}


// TABEL PESAN
model Message {
  id        Int      @id @default(autoincrement())
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}